<?xml version="1.0"?>
<ruleset name="Vest">
  <description>Vest coding standard.</description>

  <rule ref="PSR2" />

  <rule ref="Internal.NoCodeFound">
    <severity>0</severity>
  </rule>

  <!-- Laravel doesn't use namespaces bu default, ignoring for now. -->
  <rule ref="PSR1.Classes.ClassDeclaration.MissingNamespace">
    <severity>0</severity>
  </rule>

  <exclude-pattern>*.blade.php</exclude-pattern>
  <exclude-pattern>./app/lang/*</exclude-pattern>
  <exclude-pattern>./app/views/*</exclude-pattern>
  <exclude-pattern>./app/storage/*</exclude-pattern>
  <!-- <exclude-pattern>./app/tests/*</exclude-pattern> -->
  <exclude-pattern>./app/database/*</exclude-pattern>
  <exclude-pattern>./app/libraries/GoogleMaps/*</exclude-pattern>
  <exclude-pattern>./app/libraries/GooglePlaces/*</exclude-pattern>
  <exclude-pattern>./app/libraries/Scrapey/*</exclude-pattern>

</ruleset>
